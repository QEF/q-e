$ECHO "  running Born-Oppenheimer pioud calculation... "
$PIOUD_COMMAND -inp si333.in  > si333.out
check_failure $?
$ECHO " done"

# clean TMP_DIR
#$ECHO "  cleaning $TMP_DIR...\c"
#rm -rf $TMP_DIR/pwscf*
#$ECHO " done"
