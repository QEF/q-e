    prefix='cu'
 /
 &system
    ibrav = 2, celldm(1) =6.73, nat= 1, ntyp= 1,
    ecutwfc = 25.0, ecutrho = 300.0, nbnd = 8
 /
 &electrons
    diagonalization='$diago'
 /
ATOMIC_SPECIES
 Cu  63.55 Cu.pz-d-rrkjus.UPF
ATOMIC_POSITIONS
